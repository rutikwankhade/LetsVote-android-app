<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/background"
tools:context=".AdminAddNewActivity">


    <ImageView
        android:id="@+id/candidate_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/user"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"


        />


    <EditText
        android:id="@+id/candidate_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:textColor="#00ccff"
        android:layout_below="@+id/candidate_photo"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input"
        android:hint="Candidate Name"
        android:paddingLeft="20dp"


        />

    <EditText
        android:id="@+id/candidate_div"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:textColor="#00ccff"
        android:layout_below="@+id/candidate_name"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input"
        android:hint="Division"
        android:paddingLeft="20dp"
        />

    <EditText
        android:id="@+id/candidate_description"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:inputType="textMultiLine"
        android:textColor="#00ccff"
        android:layout_below="@+id/candidate_div"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/input"
        android:hint="Description"
        android:paddingLeft="20dp"
        />

<Button
    android:id="@+id/add_candidate"
    android:layout_width="200dp"
    android:layout_height="45dp"
    android:text="Add Candidate"
    android:textColor="#ffff"
    android:background="#00ccff"
    android:layout_below="@+id/candidate_description"
    android:layout_marginTop="35dp"
    android:textSize="20dp"
    android:layout_centerHorizontal="true"
/>

</RelativeLayout>